@model WebApplication10.Models.HopDong

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center;color:lawngreen">Cập Nhật</h2>

@using (Html.BeginForm("Edit", "Dm_KH_Hd", FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;color:red">Chi Tiết Hợp Đồng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id) <!-- Ensure Id is passed -->
        @Html.HiddenFor(model => model.Ma_Dvcs) <!-- Ensure Ma_Dvcs is passed -->
        @Html.HiddenFor(model => model.Ma_Dt) <!-- Ensure Ma_Dt is passed -->

        <div class="form-group">
            @Html.LabelFor(model => model.Ma_Dvcs, "Chi Nhánh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.Ma_Dvcs</span> <!-- Display Ma_Dvcs (Chi Nhánh code) as readonly -->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ma_Dt, "Đối Tượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.Ma_Dt</span> <!-- Display Ma_Dt (Đối Tượng) as readonly -->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.So_Hop_Dong, "Số Hợp Đồng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.So_Hop_Dong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.So_Hop_Dong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-danger btn-default" id="submitBtn" />
                <a href="@Url.Action("Index", "Dm_KH_Hd")" class="btn btn-info">Quay lại</a> <!-- Add the back button -->
            </div>
            
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#editForm").submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                var formData = $(this).serialize(); // Serialize form data
                $.ajax({
                    url: '@Url.Action("Edit", "Dm_KH_Hd")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        // Redirect to the index page or handle success response
                        window.location.href = '@Url.Action("Index", "Dm_KH_Hd")';
                    },
                    error: function (xhr, status, error) {
                        // Handle error response as needed
                        console.log(error);
                    }
                });
            });
        });
    </script>
}
