@model WebApplication10.Models.HopDong

@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center;color:blue">Thêm Hợp Đồng</h2>

@using (Html.BeginForm("Create", "Dm_KH_Hd", FormMethod.Post, new { id = "createForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Ma_Dvcs, "Mã Chi Nhánh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Ma_Dvcs, new { @id = "Ma_Dvcs" }) <!-- Hidden field to store Ma_Dvcs -->
                <input type="text" class="form-control" value="@Model.Ma_Dvcs" readonly /> <!-- Read-only display of Ma_Dvcs -->
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Đối Tượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="dropdownInput" list="dropdownList" placeholder="Tìm kiếm loại đối tượng" class="form-control mt-2">
                <datalist id="dropdownList"></datalist>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.So_Hop_Dong, "Số Hợp Đồng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.So_Hop_Dong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.So_Hop_Dong, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Hidden fields for Ma_Dt and Ten_Dt -->
        <div class="form-group">
            @Html.HiddenFor(model => model.Ma_Dt, new { @id = "Ma_Dt" })
            @Html.HiddenFor(model => model.Ten_Dt, new { @id = "Ten_Dt" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-danger btn-default" id="submitBtn" style="font-size:1.5rem;width:150px " />
                <a href="@Url.Action("Index", "Dm_KH_Hd")" class="btn btn-info">Quay lại</a> <!-- Add the back button -->
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var urlParams = new URLSearchParams(window.location.search);
            var maDvcs = urlParams.get('maDvcs');

            if (maDvcs) {
                $('#Ma_Dvcs').val(maDvcs);

                $('#dropdownInput').on('input', function () {
                    var searchTerm = $(this).val();

                    $.ajax({
                        url: '@Url.Action("LoadObjects", "Dm_KH_Hd")',
                        type: 'GET',
                        data: { maDvcs: maDvcs, searchTerm: searchTerm }, // Chuyển cả searchTerm lên controller
                        success: function (data) {
                            console.log("Data received:", data);
                            var maDtDropdown = $("#dropdownList");
                            maDtDropdown.empty(); // Clear existing options
                            $.each(data, function (index, item) {
                                maDtDropdown.append($('<option>', {
                                    value: item.Value,
                                    text: item.Text
                                }));
                            });
                        },
                        error: function (xhr, status, error) {
                            console.log("Error loading Ma_dt list.");
                            console.log("Status:", status);
                            console.log("Error:", error);
                        }
                    });
                });

                $('#dropdownInput').on('change', function () {
                    var selectedOption = document.querySelector("#dropdownList option[value='" + this.value + "']");
                    if (selectedOption) {
                        var maDt = this.value.trim();
                        var tenDt = selectedOption.textContent.split(' - ')[1].trim();

                        $('#Ma_Dt').val(maDt);
                        $('#Ten_Dt').val(tenDt);
                    } else {
                        $('#Ma_Dt').val("");
                        $('#Ten_Dt').val("");
                    }
                });
            }

            // Prevent default form submission and handle it via AJAX
            $("#createForm").submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                var formData = $(this).serialize(); // Serialize form data
                $.ajax({
                    url: '@Url.Action("Create", "Dm_KH_Hd")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        window.location.href = '@Url.Action("Index", "Dm_KH_Hd")';
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
}
